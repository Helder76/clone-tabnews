{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend",
      "rules": [
        {
          "id": "@secretlint/secretlint-rule-aws",
          "options": {
            "enableIDScanRule": true
          }
        }
      ]
    },

    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "password",
            "pattern": "password\\\\s*(=|:)\\\\s*[\\\"'](?<password>[^\\\\n\\\"']+)[\\\"']"
          },
          {
            "name": "openai-key",
            "pattern": "/sk-(?<openai>[a-zA-Z0-9]{32,})/"
          },
          {
            "name": "gcp-key",
            "pattern": "/AIza(?<gcp>[0-9A-Za-z\\-_]{35})/"
          },

          {
            "name": "Token-GitHub",
            "pattern": "/ghp_(?<github>[A-Za-z0-9]{36})/"
          },
          {
            "name": "strip-key",
            "pattern": "/sk_live_(?<stripe>[0-9a-zA-Z]{24})/"
          }
        ]
      }
    }
  ]
}
